@using NewsWebSite.Models;
@model Article
@{
    Layout = "~/Views/Shared/Lay.cshtml";
    var createmsg = "Created: " + Model.CreateDate + (Model.CreateDate != Model.LastUpdateDate ? "<br/>Updated: " + Model.LastUpdateDate : "");
}


<div class="news_view">
    <h2 class="news_head">@Model.Title</h2>
    <a href="http://localhost:57821/Home/EditArticle?Id=@Model.Id">EDIT</a>
    <img class="FullItemImg" src="~/Content/UserImages/@Model.Id/@Model.Image" alt="SRC" style="max-height: 400px">
    <p>@Model.FullDescription</p>
    <div class="publicate_time">@Html.Raw(createmsg)</div>
</div>
