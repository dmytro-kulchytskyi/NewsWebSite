    {
        <div class="news_item">
            <h3><a id="@a.Id" href="@Url.Action("Article", new {Id = a.Id})" onclick="Redirect(@a.Id);">@a.Title.Substring(0, (a.Title.Length <= 15 ? a.Title.Length : 15))</a></h3>
